    "axios": "^1.6.8",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "html-react-parser": "^5.1.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "@vkontakte/vk-miniapps-deploy": "^0.1.7",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
